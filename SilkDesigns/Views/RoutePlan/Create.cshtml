@using SilkDesign.Models
@model RoutePlan
@{
    ViewData["Title"] = "Create Plan";
}

<h1>Create Arrangement</h1>
<h2 class="alert-danger">@ViewBag.Result</h2>

<form method="post">
    <div class="form-group">
        <div class="col-md-10">
            <label asp-for="RouteName">Route:</label>
@*            @Html.DropDownList("ddlRoutes", ViewBag.ListOfRoutes as IEnumerable<SelectListItem>)
*@ 
              @Html.DropDownListFor(
                  x => Model.RouteID,
                  Model.AvailableRoutes
              )
   
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <input class="form-control" asp-for="Description" />
    </div>

    <div class="text-center panel-body">
        <button type="submit" class="btn btn-sm btn-primary">Create</button>
        <button class="btn btn-sm btn-primary" onclick="javascript:history.go(-1);return false;">Cancel</button>

    </div>

</form>
