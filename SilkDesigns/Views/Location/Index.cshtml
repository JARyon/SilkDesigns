@using SilkDesign.Models;
@model IEnumerable<LocationIndexViewModel>
@{
    ViewData["Title"] = "Read Location";
}
<h1>Locations <a asp-action="Create" class="btn btn-sm btn-secondary">Add Non-Customer Location</a></h1>
Places that will physically receive arrangements.
<table class="table table-bordered table-sm table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Type|Customer</th>
            <th class="text-center">Edit</th>
        </tr>
    </thead>
    <tbody>
        @if (Model == null)
        {
            <tr><td colspan="5" class="text-center">No Model Data</td></tr>
        }
        else
        {
            @foreach (var p in Model)
            {
                <tr>

                    <td>@p.Name</td>
                    <td>@p.Description</td>
                    <td>@p.LocationType</td>
                    <td class="text-center"><a asp-action="Update" asp-route-id="@p.LocationID"><img src="~/images/pencil-2-16.png" /></a></td>
                </tr>
            }
        }
    </tbody>
</table>