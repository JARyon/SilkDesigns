@using SilkDesign.Models;
@model LocationPlacement
@{

    ViewData["Title"] = "Update Location Arrangement";
}

<h1>Update Placement
    <span style="Float: right">
        @if (Model != null)
        {
            <a asp-action="InactivatePlacement" asp-route-id=@Model.LocationPlacementID  class="btn btn-sm btn-outline-danger" onclick="return confirm('Are you sure you want to remove this placement?')">Delete Placement</a>
        }
    </span>
</h1>
<h2 class="alert-danger">@ViewBag.Result</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="Description"></label>
        <input class="form-control" asp-for="Description" />
    </div>
    <div class="form-group">
        <label asp-for="Quantity"></label>
        <input class="form-control" asp-for="Quantity" />
    </div>

    @if (Model != null)
    {
    <div class="form-group">
        <label asp-for="SizeID">Size</label>
        <div class="col-md-10">
            @Html.DropDownListFor(
            x => x.SizeID,
            Model.Sizes
            )
        </div>
    </div>
    }

    <div class ="form-group">
        <input type="hidden" asp-for="LocationID" />
    </div>
    <div class="text-center panel-body">
        <br />

    @if (Model != null)
    {
        <button type="submit" class="btn btn-sm btn-primary">Update</button>
    }
        <button class="btn btn-sm btn-primary" onclick="javascript:history.go(-1);return false;">Cancel</button>
    </div>

</form>