@using SilkDesign.Models;
@model IEnumerable<Route>


@{
    ViewData["Title"] = "Read Route";
}
<h1>Routes <a asp-action="Create" class="btn btn-sm btn-secondary">Add Route</a></h1>
Groups of Locations where arrangement are to be deliverd on the same delivery.
<table class="table table-bordered table-sm table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th class="text-center">Select</th>
            <th class="text-center">Delete</th>
        </tr>
    </thead>
    <tbody>
        @if (Model == null)
        {
            <tr><td colspan="5" class="text-center">No Model Data</td></tr>
        }
        else
        {
            @foreach (var p in Model)
            {
                <tr>

                    <td>@p.Name</td>
                    <td>@p.Description</td>
                    <td class ="text-center"><a asp-action="Update" asp-route-id="@p.RouteId"><img src="~/images/checked-checkbox-16.png" /></a></td>
                    <td class ="text-center">
                        <a asp-controller="Route" asp-action="InactivateRoute" asp-route-id="@p.RouteId" onclick="return confirm('Are you sure you want to remove this Route?')"><img src="~/images/delete-16.png" /></a>

                    </td>
                </tr>
            }
        }
    </tbody>
</table>