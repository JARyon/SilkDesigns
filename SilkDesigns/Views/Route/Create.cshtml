@using SilkDesign.Models;
@model Route
@{
    ViewData["Title"] = "Create Route";
}

<h1>Create Route</h1>
<h2 class="alert-danger">@ViewBag.Result</h2>

<form method="post">
    <div class="form-group">
        @Html.LabelFor(r => r.Name, new {@class = "control-label col-md-2"})
        @Html.TextBoxFor(r => r.Name, new { @class = "form-control", autofocus = "autofocus"})
        @Html.ValidationMessageFor(r => r.Name, "", new {@class= "text-danger"})
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <input class="form-control" asp-for="Description" />
    </div>
    <div class="form-group">
        <div class="col-md-10">
            @Html.LabelFor(model => model.WarehouseID, new {@class = "control-label col-md-2"})
            @Html.DropDownListFor(model => model.WarehouseID, Model.Warehouses, new {@class = "form-control"})
            @Html.ValidationMessageFor(model => model.WarehouseID,"", new {@class = "text-danger"})
        </div>
    </div>
    <div class="text-center panel-body">
        <br />
        <button type="submit" class="btn btn-sm btn-primary">Create</button>
        <button class="btn btn-sm btn-primary" onclick="javascript:history.go(-1);return false;">Cancel</button>

    </div>

</form>