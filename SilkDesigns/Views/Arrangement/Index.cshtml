@model IEnumerable<ArrangementIndexViewModel>

@{
    ViewData["Title"] = "Arrangements List";
    var SearchString = ViewBag.SearchString;
}
<form  action="/Arrangement/Index" method="get">

    <h1>

        Arrangement Catalog <span style="Float: right">
            <a asp-action="Create" class="btn btn-sm btn-secondary">Add Arrangement</a>
        </span>
    </h1>

    Master List of all available arrangements regardless of location.
    <span style="Float: right">
        <input type="text" id="SearchString" name="SearchString" placeholder="Search.." >
        <button class="btn btn-sm"> <img src="~/images/search-24.png" alt="buttonpng" border="0" /></button>
    </span>
    <script>
        var myvalue = '@ViewBag.SearchString';
        document.getElementById('SearchString').setAttribute('value', myvalue);
    </script>
</form>
<table class="table table-bordered table-sm table-striped">
    <thead>
        <tr>
            <th><a asp-action="Index" asp-route-id="CODE" asp-route-SearchString="@SearchString">Code</a></th>
            <th><a asp-action="Index" asp-route-id="Name" asp-route-SearchString="@SearchString">Name</a></th>
            <th><a asp-action="Index" asp-route-id="Description" asp-route-SearchString="@SearchString">Description</a></th>
            <th><a asp-action="Index" asp-route-id="Quantity" asp-route-SearchString="@SearchString">Quantity</a></th>
            <th><a asp-action="Index" asp-route-id="Size" asp-route-SearchString="@SearchString">Size</a></th>
            <th>Update</th>
        </tr>
    </thead>
    <tbody>
        @if (Model == null)
        {
            <tr><td colspan="5" class="text-center">No Model Data</td></tr>
        }
        else
        {
            @foreach (var p in Model)
            {
                <tr>
                    <td>@p.Code</td>
                    <td>@p.Name</td>
                    <td>@p.Description</td>
                    <td>@p.Quantity</td>
                    <td>@p.SizeCode</td>
                    <td><a asp-action="Update" asp-route-id="@p.ArrangementID">Update</a></td>
                </tr>
            }
        }
    </tbody>
</table>
