@using SilkDesign.Models;
@model CustomerInventoryHistory
@{
    ViewData["Title"] = "Create Location History";
}
<h1>Create Customer Location History</h1>
<h2 class="alert-danger">@ViewBag.Result</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="CustomerName"> </label> @Model.CustomerName
    </div>

    <div class="form-group">
        <label asp-for=" LocationName"> </label> @Model.LocationName
    </div> 
    <div class="form-group">
        <label class="row-form-label-lg" asp-for=" StartDate"></label>
        <input class="form-control" asp-for="@Model.StartDate" />
        @Html.ValidationMessageFor(m => m.StartDate, "", new {@class= "text-danger"})
    </div>

    <div class="form-group">
        <label asp-for="ArrangementID">Arrangment</label>
        <div class="row-md-10">
            @Html.DropDownListFor(x => x.ArrangementID,Model.Arrangements )
        </div>
        @Html.ValidationMessageFor(m => m.ArrangementID, "", new {@class= "text-danger"})
    </div>
    <div class="form-group">
        <input type="hidden" asp-for="CustomerID" />
        <input type="hidden" asp-for="LocationID" />
    </div>
    <div class="text-center panel-body">
        <br />
        <button type="submit" class="btn btn-sm btn-primary">Create</button>
        <a asp-action="LocationInventoryHistoryList" asp-route-id=@Model.LocationID asp-route-LocationName=@Model.LocationName asp-route-CustomerName=@Model.CustomerName class="btn btn-sm btn-primary">Cancel</a>

    </div>

</form>