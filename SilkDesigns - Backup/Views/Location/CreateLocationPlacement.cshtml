@using SilkDesign.Models;
@model LocationPlacement
@{

    ViewData["Title"] = "Create Location";
}

<h1>Create Placement for @ViewBag.LocationName</h1>
<h2 class="alert-danger">@ViewBag.Result</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="Description"></label>
        <input class="form-control" asp-for="Description" />
    </div>
    <div class="form-group">
        <label asp-for="Quantity"></label>
        <input class="form-control" asp-for="Quantity" />
    </div>
    <div class="form-group">
        <div class="col-md-10">
            <br />
            <label asp-for="SizeID"> Size</label>
            @Html.DropDownList("ddlSize", ViewBag.ListOfSizes2 as IEnumerable<SelectListItem>)
        </div>
    </div>
    <div class="form-group">
        <input type="hidden" class="form-control" asp-for="LocationID" value="@ViewBag.LocationID" />
    </div>
    <div class="text-center panel-body">
        <br />
        <button type="submit" class="btn btn-sm btn-primary">Create</button>
        <button class="btn btn-sm btn-primary" onclick="javascript:history.go(-1);return false;">Cancel</button>

    </div>

</form>